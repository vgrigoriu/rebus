<Window x:Class="CuvinteÎncrucișate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <Menu>
            <MenuItem Header="Fișier">
                <MenuItem x:Name="FileNewMenu" Header="Nou"/>
            </MenuItem>
        </Menu>
        <StackPanel Orientation="Horizontal">
            <StackPanel x:Name="Panel" HorizontalAlignment="Center" VerticalAlignment="Center">
            </StackPanel>
            <ScrollViewer Width="288">
                <ListBox x:Name="listaCuvinte"/>
            </ScrollViewer>
            <TextBlock x:Name="filtruTextBlock"/>
        </StackPanel>
    </StackPanel>
</Window>
